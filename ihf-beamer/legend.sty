% package options
\providecommand{\exportfilename}[1]{}
\DeclareOption{external}{
	\usetikzlibrary{external}
	\tikzexternalize[prefix=ext/]
	\renewcommand{\exportfilename}[1]{\tikzsetnextfilename{#1}}
}
\ExecuteOptions{}
\ProcessOptions\relax

% define line specs
\newcommand{\lwidth}{1.5pt}
\DeclareRobustCommand{\legend}[2][]{\exportfilename{legend#1#2}\tikz[baseline=-.6ex]{%
	\draw[color=#2, line width=\lwidth, #1](0,0)--(2.5ex,0);}}
\DeclareRobustCommand{\legendCircle}[2][]{\exportfilename{legendCircle#1#2}\tikz[baseline=-.6ex]{%
	\draw[color=#2, line width=\lwidth, #1](0,0)--(2.5ex,0);%
	\draw[color=#2, line width=\lwidth]    (1.25ex,0) circle (0.45ex);}}
\DeclareRobustCommand{\legendSquare}[2][]{\exportfilename{legendSquare#1#2}\tikz[baseline=-.6ex]{%
	\draw[color=#2, line width=\lwidth, #1](0,0)--(2.5ex,0);%
	\draw[color=#2, line width=\lwidth, xshift=-0.4ex, yshift=-0.4ex] (1.25ex,0) rectangle ++(0.8ex,0.8ex);}}
\DeclareRobustCommand{\legendCross}[2][]{\exportfilename{legendCross#1#2}\tikz[baseline=-.6ex]{%
	\draw[color=#2, line width=\lwidth, #1](0,0)--(2.5ex,0);%
	\draw[color=#2, line width=\lwidth, xshift=1.25ex] (-0.4ex,-0.4ex)--(+0.4ex,0.4ex);
	\draw[color=#2, line width=\lwidth, xshift=1.25ex] (+0.4ex,-0.4ex)--(-0.4ex,0.4ex);}}
\DeclareRobustCommand{\legendMCross}[2][]{\exportfilename{legendMCross#1#2}\tikz[baseline=-.6ex]{%
	\draw[color=#2, line width=\lwidth, xshift=1.25ex] (-0.4ex,-0.4ex)--(+0.4ex,0.4ex);
	\draw[color=#2, line width=\lwidth, xshift=1.25ex] (+0.4ex,-0.4ex)--(-0.4ex,0.4ex);}}

