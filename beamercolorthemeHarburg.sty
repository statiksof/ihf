\mode<presentation>


% tuhh main official colors
\definecolor{tuhh-darkblue}{RGB}{0,0,153}
\definecolor{tuhh-cyan}{RGB}{45,198,214}

% color palette recommended for use with main tuhh colors
% actually not used by theme, feel free to play around
\definecolor{tuhh-yellowgreen}{RGB}{208,227,0}
\definecolor{tuhh-orange1}{RGB}{244,198,0}
\definecolor{tuhh-orange2}{RGB}{236,135,14}
\definecolor{tuhh-magenta}{RGB}{229,48,108}

% color palette for different study programs
% actually not used by theme, feel free to play around
\definecolor{tuhh-aiwges}{RGB}{188,205,230}     % light blue
\definecolor{tuhh-bau}{RGB}{0,158,224}          % blue
\definecolor{tuhh-biovt}{RGB}{0,130,123}        % blue-green
\definecolor{tuhh-et}{RGB}{255,238,44}          % yellow
\definecolor{tuhh-eut}{RGB}{0,148,48}           % green
\definecolor{tuhh-iiw}{RGB}{250,190,0}          % yellow-orange
\definecolor{tuhh-it}{RGB}{150,65,140}          % violet
\definecolor{tuhh-mb}{RGB}{200,5,70}            % dark magenta
\definecolor{tuhh-sb}{RGB}{0,120,170}           % blue
\definecolor{tuhh-vt}{RGB}{200,210,0}           % yellow-green

%%%%%%%%%%%%
%% Beamer mode
\mode<beamer>{

% text colors
\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{structure}{fg=tuhh-cyan!25!tuhh-darkblue,bg=white}
\setbeamercolor{alerted text}{parent=normal text, fg=red}
\setbeamercolor{example text}{parent=normal text, fg=green}

% background
\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

% main theme colors
\setbeamercolor{palette primary}{fg=white,bg=tuhh-cyan!0!tuhh-darkblue}
\setbeamercolor{palette secondary}{fg=white,bg=tuhh-cyan!15!tuhh-darkblue}
\setbeamercolor{palette tertiary}{fg=white,bg=tuhh-cyan!75!tuhh-darkblue}
\setbeamercolor{palette quaternary}{fg=white,bg=tuhh-cyan!25!tuhh-darkblue}

% title in title screen
\setbeamercolor{titlelike}{parent=palette primary,fg=white}

% block titles
\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!55!black}

% block bodies
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

% sidebars (not used in Harburg theme)
\setbeamercolor{sidebar}{bg=tuhh-darkblue}
\setbeamercolor{palette sidebar primary}{fg=white}
\setbeamercolor{palette sidebar secondary}{fg=white!75}
\setbeamercolor{palette sidebar tertiary}{fg=white!75}
\setbeamercolor{palette sidebar quaternary}{fg=white!75}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

}

\mode<handout>{

% text colors
\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{structure}{fg=tuhh-cyan!25!tuhh-darkblue,bg=white}
\setbeamercolor{alerted text}{parent=normal text, fg=red}
\setbeamercolor{example text}{parent=normal text, fg=green}

% main theme colors
\setbeamercolor{palette primary}{fg=black,bg=structure.fg!4!white}
\setbeamercolor{palette secondary}{fg=black,parent=palette primary}
\setbeamercolor{palette tertiary}{fg=black,bg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}

% title in title screen
\setbeamercolor{titlelike}{fg=white,bg=tuhh-cyan!0!tuhh-darkblue}

% block titles
\setbeamercolor{block title}{use=structure,fg=black,bg=structure.fg!55!white}
\setbeamercolor{block title alerted}{use=alerted text,fg=black,bg=alerted text.fg!55!white}
\setbeamercolor{block title example}{use=example text,fg=black,bg=example text.fg!55!white}

% block bodies
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

}

\mode<all>
